root = true

[*]
end_of_line = lf
insert_final_newline=true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[{.gitattributes,.gitignore,.gitmoduels}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.sh]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2
