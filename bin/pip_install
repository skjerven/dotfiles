#!/usr/bin/env zsh

# Install Python packages via pip

packages=(
  coverage
  cython
  "ipython[all]"
  jinja2
  jupyter
  mock
  mpi4py
  nltk
  nose
  pandas
  pdb
  pep8
  pip-autoremove
  pygments
  pylint
  pytables
  pyzmq
  pytest
  q
  snakeviz
  sympy
  tox
  virtualenv
  virtualenvwrapper
)

function log() {
  echo $* > /dev/stderr
}

log "pip install"
for name_and_args in $packages
do
    log "pip install ${=name_and_args}"
    pip install "${=name_and_args}"
done
